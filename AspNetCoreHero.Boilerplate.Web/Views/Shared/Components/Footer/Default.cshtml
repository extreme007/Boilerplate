@using AspNetCoreHero.Boilerplate.Web.Models
@using AspNetCoreHero.Boilerplate.Web.Extensions
@model FooterViewModel
<footer>
    <div class="footer-content">
        <div class="footer-slider">
            <div class="container">
                <div class="slider-title text-center">
                    <h3>ĐỐI TÁC</h3>
                </div>
                <div class="footer-slider-inner">
                    @foreach (var item in Model.Partner)
                    {
                        <div class="footer-slider-item">
                            <a href="#">
                                <img alt="@item.Title" src="@item.Image">
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
        <div class="footer-content">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-xs-12">
                        <div class="about">
                            <h3>Tintin247</h3>
                            <p>Tổng hợp tin tức nóng hằng ngày chính xác và nhanh nhất.</p>
                            <ul class="header-social-links">
                                <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <div class="categories">
                            <h3>Chuyên mục</h3>
                            <div class="col-sm-6 col-xs-12">
                                <ul>
                                    @foreach (var subItem in Model.Category.Take(5))
                                    {
                                        <li><a href="/@subItem.Slug">@subItem.Title</a></li>
                                    }
                                </ul>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <ul>
                                    @foreach (var subItem in Model.Category.Skip(5).Take(5))
                                    {
                                        <li><a href="/@subItem.Slug">@subItem.Title</a></li>
                                    }
                                </ul>
                            </div>
                            @*@foreach (var item in Model.Category.Batch(2))
        {
            <div class="col-sm-6 col-xs-12">
                <ul>
                    @foreach (var subItem in item)
                    {
                        <li><a href="/@subItem.Slug">@subItem.Title</a></li>
                    }

                </ul>
            </div>
        }*@
                        </div>
                    </div>

                    <div class="col-sm-4 col-xs-12">
                        <div class="newsletter">
                            <h3>Newsletter</h3>
                            <p>Đăng kí để cập nhật tin tức mới nhất</p>
                            <form>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="email1" placeholder="Enter Email">
                                    <a href="#"><span class="search_btn"><i class="fa fa-paper-plane" aria-hidden="true"></i></span></a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="">
                <div class="copyright-content text-center">
                    <div class="container">
                        <span>Copyright © 2021 <a href="/">http://tintin247.com/</a> - All Rights reserved</span>
                    </div>
                
                </div>
            </div>
        </div>
    </div>
    <div class="overlay"></div>
</footer>