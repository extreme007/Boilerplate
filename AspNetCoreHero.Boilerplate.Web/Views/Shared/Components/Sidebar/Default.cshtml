@using System;
@using AspNetCoreHero.Boilerplate.Web.Models
@model SidebarViewModel
<div id="sidebar">
    <div class="item-sidebar">
        <div class="recent-post clearfix sidebar-box">
            <div class="sidebar-title">
                <h3>Tin mới nhất</h3>
            </div>
            @foreach (var item in Model.SidebarTopNews)
            {
                <div class="recent-item">
                    <div class="recent-image">
                        <img src="@item.ThumbImage" alt="@item.Title">
                    </div>
                    <div class="recent-content">
                        <h4><a href="@item.FullSlug">@item.Title</a></h4>
                        <div class="author-detail">
                            <p><i class="icon-clock"></i> @item.PostedDatetime</p>
                            @*<p><a href="#"><i class="icon-chat"></i> @item.CommentCount comments</a></p>*@
                        </div>
                        @*<a href="#" class="tag tag-blue">@item.SourceName</a>*@
                    </div>
                </div>
            }
        </div>

        <div class="post-categories sidebar-box">
            <div class="sidebar-title">
                <h3>Danh mục</h3>
            </div>
            <ul>
                @foreach (var item in Model.SidebarCategory)
                {
                    <li><a href="/@item.Slug">@item.Title</a></li>
                }

            </ul>
        </div>

        <div class="tech-box tech-categories">
            <div class="post-title">
                <h3>Tin được quan tâm</h3>
            </div>
            <div class="top-post clearfix">
                <ul>
                    @{
                        var countTopView = 1;
                    }
                    @foreach (var item in Model.SidebarTopView)
                    {
                        <li>
                            <div class="tp-item">
                                <div class="tp-no">
                                    <span>@countTopView</span>
                                </div>
                                <div class="tp-image">
                                    <img src="@item.ThumbImage" alt="@item.Title">
                                </div>
                                <div class="tp-content">
                                    <h4><a href="@item.FullSlug">@item.Title</a></h4>
                                    <div class="author-detail">
                                        <p><i class="icon-clock"></i> @item.PostedDatetime</p>
                                        @*<p><a href="#"><i class="icon-chat"></i> @item.ViewCount comments</a></p>*@
                                    </div>
                                </div>
                            </div>
                        </li>
                        countTopView++;
                    }

                </ul>
            </div>
        </div>

        <div class="ad1 sidebar-box">
            <div class="sidebar-title">
                <h3>Advertisement</h3>
            </div>
            <div class="ad1-image">
                <img src="images/footer1.jpg" alt="img">
            </div>
        </div>
        <div class="popular-post sidebar-box">
            <div class="sidebar-title">
                <h3>Bình luận nhiều nhất</h3>
            </div>
            @{
                var countTopComment = 1;
            }
            @foreach (var item in Model.SiebarTopComment)
            {
                <div class="popular-item">
                    <div class="popular-content">
                        <span class="item-no">@countTopComment.ToString().PadLeft(2, '0')</span>
                        <h4><a href="@item.FullSlug">@item.Title</a></h4>
                        <div class="author-detail">
                            @*<p><a href="#"><i class="icon-profile-male"></i> John Doe</a></p>*@
                            <p><i class="icon-clock"></i> @item.PostedDatetime</p>
                            <p><a href="#"><i class="icon-chat"></i> @item.CommentCount comments</a></p>
                        </div>
                    </div>
                </div>
                countTopComment++;
            }
        </div>
        <div class="popular-post sidebar-box">
            <div class="sidebar-title">
                <h3>Tỷ giá & Giá Vàng</h3>
            </div>
            <iframe id="fr51" style="border: none;"
                    src="//tygia.com/api.php?column=1&amp;title=0&amp;chart=0&amp;gold=1&amp;rate=1&amp;expand=0&amp;color=eeeeee&amp;titlecolor=111111&amp;bgcolor=ffffff&amp;upcolor=00aa00&amp;downcolor=bb0000&amp;textcolor=333333&amp;nganhang=VIETCOM&amp;fontsize=80&amp;ngoaite=usd,jpy,chf,eur,gbp,aud&amp;change=1&amp;column=2&amp;css=%23SJC_N_ng{display:%20table-row%20!important;}"
                    width="100%" height="380">
            </iframe>
        </div>

        <div class="popular-post sidebar-box">
            <div class="sidebar-title">
                <h3>Lãi suất gửi</h3>
            </div>
            <iframe frameborder="0" width="100%" height="650px" 
                    src="https://webtygia.com/api/laisuat?bgheader=FFFFFF&colorheader=000000&padding=5&fontsize=13&undefined">
            </iframe>
        </div>
    </div>
</div>