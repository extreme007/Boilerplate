@foreach (var item in listCategory)
{
    var isHasChildren =  Model.ListCategory.Any(x => x.ParentId == item.Id);
    var partialView = isHasChildren ? "~/Views/Partials/_Partial_HomeCategoryMulti.cshtml" : "~/Views/Partials/_Partial_HomeCategory.cshtml";
    @await Html.PartialAsync(partialView, Model.DataByCategory[item.Id], new ViewDataDictionary(ViewData) { { "Title", item.Title } })
}
