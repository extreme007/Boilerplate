                                                    <p><a href="#"><i class="icon-chat"></i> @item.CommentCount comments</a></p>
                                                </div>
                                                <p>@item.Description</p>
                                                <a href="@slugReplace" class="btn-white btn-red">Read More</a>
                                            </div>
                                        </div>
                                    }
