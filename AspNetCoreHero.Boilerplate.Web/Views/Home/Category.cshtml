                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        var slugReplace = string.Format("/{0}/{1}-{2}",item.ArticleCategory.Slug, item.Slug, item.Id);
                        <div class="blog-post">
                            <div class="post-outer">
                                <div class="row">
                                    @if (@item.ThumbImage == null)
                                    {
                                        <div class="col-xs-12">
                                            <div class="blog-post-content">
                                                <h3><a href="@slugReplace">@item.Title</a></h3>
                                                <div class="author-detail">
                                                    @*<p><a href="#"><i class="icon-profile-male"></i> @item.Author</a></p>*@
