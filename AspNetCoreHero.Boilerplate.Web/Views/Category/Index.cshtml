@using AspNetCoreHero.Boilerplate.Web.Views.Shared.Components.Sidebar;
@using AspNetCoreHero.Boilerplate.Web.Models
@model IEnumerable<ArticleViewModel>
@{
    Layout = "_Layout";
}
<!-- Blog Content -->
<section class="blog-content">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-sm-12">
                <!-- Banner -->
                <div id="home_banner_blog">
                    <div class="swiper-container">
                        <div class="swiper-wrapper">
                            <div class="swiper-slide">
                                <div class="slide-inner slide-overlay" style="background-image:url(images/slider/slider1.jpg)">
                                    <div class="home_banner_text">
                                        <div class="banner-tag">
                                            <a href="#" class="tag tag-blue">#New</a>
                                            <a href="#" class="tag tag-gold">#Health</a>
                                        </div>
                                        <h2><a href="detail.html">Discover your true health</a></h2>
                                        <div class="author-detail">
                                            <p><a href="#"><i class="icon-profile-male"></i> John Doe</a></p>
                                            <p><i class="icon-clock"></i> 12 May</p>
                                            <p><a href="#"><i class="icon-chat"></i> 5 comments</a></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="swiper-slide">
                                <div class="slide-inner slide-overlay" style="background-image:url(images/slider/slider2.jpg)">
                                    <div class="home_banner_text">
                                        <div class="banner-tag">
                                            <a href="#" class="tag tag-blue">#New</a>
                                            <a href="#" class="tag tag-gold">#Health</a>
                                        </div>
                                        <h2><a href="detail.html">Discover your true health</a></h2>
                                        <div class="author-detail">
                                            <p><a href="#"><i class="icon-profile-male"></i> John Doe</a></p>
                                            <p><i class="icon-clock"></i> 12 May</p>
                                            <p><a href="#"><i class="icon-chat"></i> 5 comments</a></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="swiper-slide">
                                <div class="slide-inner slide-overlay" style="background-image:url(images/slider/slider3.jpg)">
                                    <div class="home_banner_text">
                                        <div class="banner-tag">
                                            <a href="#" class="tag tag-blue">#New</a>
                                            <a href="#" class="tag tag-gold">#Health</a>
                                        </div>
                                        <h2><a href="detail.html">Discover your true health</a></h2>
                                        <div class="author-detail">
                                            <p><a href="#"><i class="icon-profile-male"></i> John Doe</a></p>
                                            <p><i class="icon-clock"></i> 12 May</p>
                                            <p><a href="#"><i class="icon-chat"></i> 5 comments</a></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="swiper-button-next swiper-button-white"></div>
                        <div class="swiper-button-prev swiper-button-white"></div>
                    </div>
                </div>
                <!-- Banner Ends -->
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <div class="blog-post">
                            <div class="post-outer">
                                <div class="row">
                                    @if (@item.ThumbImage == null)
                                    {
                                        <div class="col-xs-12">
                                            <div class="blog-post-content">
                                                <h3><a href="@item.FullSlug">@item.Title</a></h3>
                                                <div class="author-detail">
                                                    @*<p><a href="#"><i class="icon-profile-male"></i> @item.Author</a></p>*@
                                                    <p><i class="icon-clock"></i> @item.PostedDatetime</p>
                                                    <p><a href="#"><i class="icon-chat"></i> @item.CommentCount comments</a></p>
                                                </div>
                                                <p>@item.Description</p>
                                                <a href="@item.FullSlug" class="btn-white btn-red">Đọc tiếp</a>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-xs-4">
                                            <div class="blog-post-image">
                                                <img src="@item.ThumbImage" alt="img">
                                                <span><a href="#" class="tag tag-green">@item.SourceName</a></span>
                                                @*<span>
                                                        @if (item.Type == "video")
                                                        {
                                                            <a class="tag tag-green"> <i class="icon-camera"></i></a>
                                                        }
                                                        else if (item.Type == "Photo")
                                                        {
                                                            <a class="tag tag-blue"> <i class="icon-picture"></i></a>
                                                        }
                                                    </span>*@
                                                <div class="image-overlay"></div>
                                            </div>
                                        </div>
                                        <div class="col-xs-8">
                                            <div class="blog-post-content">
                                                <h3><a href="@item.FullSlug">@item.Title</a></h3>
                                                <div class="author-detail">
                                                    @*<p><a href="#"><i class="icon-profile-male"></i> @item.Author</a></p>*@
                                                    <p><i class="icon-clock"></i> @item.PostedDatetime</p>
                                                    <p><a href="#"><i class="icon-chat"></i> @item.CommentCount comments</a></p>
                                                </div>
                                                <p>@item.Description</p>
                                                <a href="@item.FullSlug" class="btn-white btn-red">Đọc tiếp</a>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    }
                }


                <div class="pagination">
                    <ul class="pagination">
                        <li><a href="#" class="active">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                @(await Component.InvokeAsync<SidebarViewComponent>())
            </div>

        </div>
    </div>
</section>
<!-- Blog Content Ends -->
